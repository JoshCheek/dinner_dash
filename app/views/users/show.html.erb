<h1>Account Settings</h1>

<% @orders.each do |order| %>
  <h4>Order #<%= order.id %></h4>
  <p>Total: $<%= order.total_price %></p>
  <% order.items.each do |item| %>
    <!-- Need to change this to link to the individual item eventually -->
    <p><%= link_to item.name, menu_item_path(item) %></p>
  <% end %>
  <p>Status: <%= order.status %></p>
  <p>Time of Order: <%= format_time(order.created_at) %></p>
  <% if order.status == "cancelled" || order.status == "completed" %>
    <p><%= "Your order was " + order.status + " at " + format_time(order.updated_at) %></p>
    <% end %>
<% end %>
