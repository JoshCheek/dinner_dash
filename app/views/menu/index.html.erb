<h1>Menu</h1>
<div class="row">
  <% @items.each do |item| %>
    <div class="col-sm-4 items">
      <%= item.name %>
      <%= button_to "Add to Cart", cart_items_path(item: item) %>
      <% item.categories.each do |item_category| %>
      <p><%= link_to item_category.display_name, menu_category_path(item_category) %></p>
      <% end  %>
    </div>
  <% end %>
</div>
