<%= form_for [:menu, @item], :html => { :multipart => true } do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label "Category:" %>
    <%= f.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true } %>
  </p>
  <p>
    <%= f.label :select_image %><br />
    <%= f.file_field :image %>
  </p>
  <%= f.submit "Submit", class: 'btn btn-default'%>
<% end %>